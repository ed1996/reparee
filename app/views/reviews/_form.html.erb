<% if user_signed_in? %>
  <%= form_for([@entreprise, @entreprise.reviews.new]) do |f| %>
    <div id="user_stars"></div>
    <%= f.text_field :comment, rows: 3, class:"form-control" %>
    <%= f.hidden_field :entreprise_id, value: @entreprise.id %>
    <div class="actions">
      <%= f.submit "Evaluez", class:"btn btn-primary" %>
    </div>
  <% end %>


<% end %>


<script>
    $(document).ready(function() {
        $('#user_stars').raty({
            path: '/assets',
            scoreName: 'review[star]',
            score: 1
        });
    });
</script>