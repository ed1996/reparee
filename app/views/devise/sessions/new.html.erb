<div class="content" style="min-height: 404px;">
  <div class="container-fluid">
      <div class="row">
        <div class="col-md-8 offset-md-2">

          <!-- Register Content -->
          <div class="account-content">
            <div class="row align-items-center justify-content-center">
              <div class="col-md-7 col-lg-6 login-left">
                <%= image_tag "login-banner.png", :class => "img-fluid" %>
              </div>
              <div class="col-md-12 col-lg-6 login-right">
                <div class="login-header">
                  <h3>Connexion <a href="doctor-register.html">Are you a Doctor?</a></h3>
                </div>

                <!-- Register Form -->
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group form-focus">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control floating", placeholder: "Adresse email" %>
                    <label class="focus-label">Email</label>
                  </div>
                  <div class="form-group form-focus">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control floating", placeholder: "Mot de passe" %>
                    <label class="focus-label">Mot de passe</label>
                  </div>
                  <div class="text-right">
                    <%= link_to 'Vous ne possèder pas de compte ?', new_user_registration_path, class: 'forgot-link' %>
                  </div>
                  <%= f.submit "Connexion", class: "btn btn-primary btn-block btn-lg login-btn" %>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                  <div class="text-center">
                    <%= link_to 'Mot de passe oublié', new_user_password_path %>
                  </div>
                  <div class="login-or">
                    <span class="or-line"></span>
                    <span class="span-or">or</span>
                  </div>
                  <div class="row form-row social-login">
                    <div class="col-6">
                      <a href="#" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f mr-1"></i> Login</a>
                    </div>
                    <div class="col-6">
                      <a href="#" class="btn btn-google btn-block"><i class="fab fa-google mr-1"></i> Login</a>
                    </div>
                  </div>
                <% end %>
                <!-- /Register Form -->

              </div>
            </div>
          </div>
          <!-- /Register Content -->

        </div>
      </div>

    </div>

  </div>
<!-- /Page Content -->