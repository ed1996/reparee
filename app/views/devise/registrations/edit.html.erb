<div class="row">
  <div class="col-md-5 col-md-offset-3 text-center">

    <h2>Modifier le profil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe actuel (pour confirmer tout changement" %>
      </div>

      <div class="actions">
        <%= f.submit "Modifier", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>