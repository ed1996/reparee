<div class="panel panel-default">
  <div class="panel-body">

    <!-- Photo principale de l'entreprise -->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photos[0].image.url(), class:"img-responsive" if @photos.length > 0 %>
      </div>
    </div>

    <br>

    <!-- Informations principales -->
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@entreprise.user), class:"img-circle avatar-large" %>
            <br>
            <br>
            <%= @entreprise.user.fullname %>
          </div>
          <div class="col-md-9">
            <h4>Nom de l'entreprise: <%= @entreprise.company_name %></h4>
            <p>Type d'artisan: <%= @entreprise.artisan_type %></p>
            <p>Adresse: <%= @entreprise.address %></p>
            <p>Code naf: <%= @entreprise.code_naf %></p>
            <p>SIREN: <%= @entreprise.siren %></p>
            <p>SIRET: <%= @entreprise.siret %></p>
            <p>Forme juridique: <%= @entreprise.legal_form %></p>
            <p>Lien web: <%= @entreprise.linkweb %></p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <!-- Formulaire de réservation -->

      </div>
    </div>

    <!-- Equipements -->
    <div class="row">
      <div class="col-md-2">
        <p>Moyen de paiement</p>
      </div>
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-6">
            <ul class="equipments">
              <li class="<%= 'text-line-throught' if !@entreprise.is_card %>">Carte de crédit</li>
              <li class="<%= 'text-line-throught' if !@entreprise.is_cheque %>">Chèque</li>
              <li class="<%= 'text-line-throught' if !@entreprise.is_cash %>">Espèce</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Caroussel -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <% if @photos %>
              <% @photos.each do |photo| %>
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="<%= photo.id %>" class="active"></li>
                </ol>
              <% end %>
          <% end %>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% if @photos %>
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url() %>
                </div>
              <% end %>
            <% end %>

          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Précédent</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Suivant</span>
          </a>
        </div>
      </div>
    </div>
<br>

    <!-- Google maps -->
    <div class="row">
      <div class="col-md-12">
        <div id="map"></div>
        <style>
          /* Set the size of the div element that contains the map */
          #map {
            height: 400px;  /* The height is 400 pixels */
            width: 100%;  /* The width is the width of the web page */
          }
        </style>

          <script>
             function initMap() {
             var uluru = {lat: <%= @entreprise.latitude %>, lng: <%= @entreprise.longitude %>};
          var map = new google.maps.Map(
          document.getElementById('map'), {zoom: 15, center: uluru});
          var marker = new google.maps.Marker({position: uluru, map: map});
          }
          </script>
          <script async defer
           src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhUhbx7WCVnx7MMPbfS_uwbqYD-8iFplI&callback=initMap">
                                                                                          </script>

      </div>
    </div>



  </div>
</div>