<div id="wrapper">
  <div id="article">
    <div class="row">
      <div class="col-md-12">
        <%= search_form_for @searching, url: search_path do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.text_field :address_cont, placeholder:"Ville", class:"form-control" %>
            </div>
            <div class="col-md-3">
              <%= f.select :artisan_type_eq, [["Plombier","Plombier"],["Serrurier","Serrurier"]], id: "artisan_type", prompt:"A sélectionner...", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <%= f.submit "Rechercher", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <hr><hr><hr>


  <div id="article">
    <div class="row">
      <div class="col-md-12">
        <%= search_form_for @searchies, url: search_path do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.text_field :address_cont, placeholder:"Ville", class:"form-control" %>
            </div>
            <div class="col-md-3">
              <%= f.select :artisan_type_eq, [["Plombier","Plombier"],["Serrurier","Serrurier"]], id: "artisan_type", prompt:"A sélectionner...", class:"form-control" %>
            </div>
          </div>
          <div class="row">
            <%= f.submit "Rechercher", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <% if @arrReparee.empty? %>
    Aucuns artisans actuellement enregistré
  <% else %>
    <% @arrReparee.each do |entreprise| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag entreprise.photos[0].image.url(:medium) if entreprise.photos.length > 0 %>
          </div>
          <div class="panel-body">
            <%= link_to entreprise.company_name, entreprise %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>




<hr><hr><hr>

<% if @products.empty? %>
  Aucuns artisans actuellement enregistré
<% else %>
  <% @products.each do |entreprise| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag entreprise.photos[0].image.url(:medium) if entreprise.photos.length > 0 %>
        </div>
        <div class="panel-body">
          <%= link_to entreprise.company_name, entreprise %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


</div>

</div>
<!-- /Page Content -->