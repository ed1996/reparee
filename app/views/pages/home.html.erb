<div class="row">
  <div class="col-md-8">
    <div class="text-center">
      <h1>Prendre rendez-vous avec un artisan de confiance !</h1>
    </div>
  </div>
</div>

<br>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Dans quelle ville ?", class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= select :artisan_type, params[:artisan_type], [["Plombier","Plombier"],["Serrurier","Serrurier"]], placeholder: "Quelle type d'artisan ?", class:"chosen-select" %>
    </div>
    <div class="col-md-2">
      <%= submit_tag "Rechercher", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>


<br>
<hr>
<br>

<div class="row">
  <div class="col-md-4">
    <h4>Artisans</h4>
  </div>
</div>

<div class="row">
    <% @entreprises.each do |entreprise| %>
      <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag entreprise.photos[0].image.url(:medium) if entreprise.photos.length > 0 %>
            </div>
            <div class="panel-body">
              <%= link_to entreprise.company_name, entreprise %>
            </div>
          </div>
      </div>
  <% end %>
</div>