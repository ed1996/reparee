<!-- Hero Start -->
<section class="bg-half bg-light d-table w-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 text-center">
        <div class="page-next-level">
          <h4 class="title"> Mes conversations </h4>
          <div class="page-next">
            <nav aria-label="breadcrumb" class="d-inline-block">
              <ul class="breadcrumb bg-white rounded shadow mb-0">
                <li class="breadcrumb-item"><%= link_to 'Accueil', root_path %></li>
                <li class="breadcrumb-item"><%= link_to 'Conversations', conversations_path %></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>  <!--end col-->
    </div><!--end row-->
  </div> <!--end container-->
</section><!--end section-->
<!-- Hero End -->

<!-- Shape Start -->
<div class="position-relative">
  <div class="shape overflow-hidden text-white">
    <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
    </svg>
  </div>
</div>
<!--Shape End-->

<br><br>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">Boîte de réception</div>
          <div class="panel-body">
            <div class="container">
              <% @conversations.each do |conversation| %>
                <% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>
                <%= link_to conversation_messages_path(conversation) do %>
                  <div class="row conversation">
                    <div class="row-md-2">
                      <%= image_tag avatar_url(other), class:"img-circle avatar-medium" %>
                    </div>
                    <div class="col-md-2">
                      <%= other.fullname %><br>
                      <%= timeago_tag conversation.messages.last.created_at, :lang=>:fr %>
                    </div>
                    <div class="col-md-8">
                      <%= conversation.messages.last.content %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <br><br><br><br><br><br><br><br><br><br><br><br>
      </div>
    </div>
  </div>
</div>